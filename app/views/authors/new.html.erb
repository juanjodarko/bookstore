<h2>
	Agregar Nuevo Autor
</h2>

<%=form_for @author do |f|%>
<div class="form-group">
	<%= f.label :first_name %><br>
	<%= f.text_field :first_name, class: 'form_control' %><br>
</div>
<div class="form-group">
	<%= f.label :last_name %><br>
	<%= f.text_field :last_name, class: 'form_control' %><br>
</div>
<%= f.submit 'Agregar', class:'btn btn-primary' %>
<%= link_to 'Cancelar', authors_path, class:'btn btn-default' %>
<%end%>
